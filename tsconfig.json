{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/app/components/*"],
      "@core/*": ["./src/app/core/*"],
      "@pages/*": ["./src/app/pages/*"],
      "@shared/*": ["./src/app/shared/*"]
    }
  }
}
