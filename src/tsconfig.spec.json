{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/spec",
        "baseUrl": "./",
        "module": "commonjs",
        "target": "es5",
        "types": [
            "jasmine",
            "node"
        ],
        "paths": {
            "@components/*": ["./app/components/*"],
            "@core/*": ["./app/core/*"],
            "@pages/*": ["./app/pages/*"],
            "@shared/*": ["./app/shared/*"]
        }
    },
    "files": [
        "test.ts"
    ],
    "include": [
        "**/*.spec.ts",
        "**/*.d.ts"
    ]
}